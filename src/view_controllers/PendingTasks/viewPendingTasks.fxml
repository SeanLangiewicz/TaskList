<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="1200.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view_controllers.PendingTasks.pendingTaskController">
   <children>
      <AnchorPane prefHeight="600.0" prefWidth="800.0">
         <children>
            <TableView fx:id="taskTblView" editable="true" layoutX="48.0" layoutY="45.0" onMouseClicked="#onMouseClickTblView" prefHeight="386.0" prefWidth="706.0">
              <columns>
                  <TableColumn fx:id="tblDescription" prefWidth="344.0" text="Description" />
                  <TableColumn fx:id="tblCompleted" prefWidth="359.0" text="Status" />
              </columns>
            </TableView>
         </children>
      </AnchorPane>
      <AnchorPane layoutX="7.0" layoutY="581.0" prefHeight="485.0" prefWidth="717.0">
         <children>
            <GridPane alignment="CENTER" layoutX="1.0" layoutY="-2.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="484.0" prefWidth="792.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label fx:id="nameLbl" alignment="CENTER" prefHeight="249.0" prefWidth="366.0" text="Description of the Task" />
                  <Label fx:id="isCompletedLbl" alignment="CENTER" prefHeight="239.0" prefWidth="390.0" text="Set Status" GridPane.rowIndex="1" />
                  <TextArea fx:id="taskDescription" prefHeight="121.0" prefWidth="381.0" promptText="Update Description" GridPane.columnIndex="1">
                     <font>
                        <Font size="28.0" />
                     </font>
                     <padding>
                        <Insets right="10.0" />
                     </padding></TextArea>
                  <ComboBox fx:id="statusComboBox" nodeOrientation="LEFT_TO_RIGHT" prefHeight="59.0" prefWidth="383.0" promptText="Select Status" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               </children>
               <padding>
                  <Insets right="10.0" />
               </padding>
            </GridPane>
         </children>
      </AnchorPane>
      <AnchorPane layoutX="14.0" layoutY="1087.0" prefHeight="99.0" prefWidth="777.0">
         <children>
            <HBox alignment="CENTER" layoutX="58.0" nodeOrientation="RIGHT_TO_LEFT" prefHeight="100.0" prefWidth="665.0" spacing="100.0">
               <children>
                  <Button fx:id="newTask" mnemonicParsing="false" onAction="#onActionNewTask" prefHeight="78.0" prefWidth="136.0" text="New Task" />
                  <Button fx:id="saveBtn" mnemonicParsing="false" onAction="#onActionSave" prefHeight="77.0" prefWidth="135.0" text="Save" />
                  <Button fx:id="deleteTaskBtn" mnemonicParsing="false" onAction="#onActionDeleteTask" prefHeight="78.0" prefWidth="136.0" text="Delete Task" />
               </children>
               <padding>
                  <Insets left="20.0" />
               </padding>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </HBox>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
